{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["tsconfig.base.json", ".env", ".env.*"],
  "pipeline": {
    // ---------- Development ----------
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },

    // ---------- Build ----------
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "lib/**", "build/**", ".next/**"],
      "inputs": ["src/**", "package.json", "tsconfig.json"]
    },

    "typecheck": {
      "dependsOn": ["^typecheck"],
      "outputs": []
    },

    "lint": {
      "outputs": []
    }
  }
}
