{
  "name": "@itrade/utils",
  "version": "0.1.0",
  "description": "Utility functions and helpers for crypto trading",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "source": "./src/index.ts",
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc --noEmit && pkgroll --clean-dist --sourcemap",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "crypto": "^1.0.1",
    "decimal.js": "^10.4.3",
    "moment": "^2.30.1",
    "moment-timezone": "^0.6.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsdown": "^0.2.16"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  }
}
