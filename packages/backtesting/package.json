{
  "name": "@itrade/backtesting",
  "version": "0.1.0",
  "description": "Backtesting engine for trading strategies",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json && pkgroll src/index.ts --clean-dist --sourcemap --tsconfig tsconfig.build.json",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@itrade/core": "workspace:*",
    "decimal.js": "^10.4.3"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "tsdown": "^0.2.16"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "restricted"
  }
}
